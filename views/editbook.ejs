<div class="login-container">

  <div class="form-wrapper">
    <form action="/<%= book._id %>" method="POST" id="login-form">

        <h3 class="new-account-header">Edit "<%= book.title %>"</h3>
        <div class="form-group">
          <input type="text" class="basic-form" name="title" value="<%= book.title %>"placeholder="title">
          <input type="text" class="basic-form" name="author" value="<%= book.author %>" placeholder="author">
          <input type="text" class="basic-form" name="genre" value="<%= book.genre %>" placeholder="genre">
          <input type="number" class="basic-form" name="pages" value="<%= book.pages %>" placeholder="pages">
          <textarea class="description-form" name="name" placeholder="description"></textarea>
          <input type="file" class="basic-form" name="cover" placeholder="upload cover">
          <label for="available">Do you want to share this book?</label> <br>

            <input type="radio" name="available" value="1"> Yes <br>
            <input type="radio" name="available" value="0"> No

            <!-- <input type="checkbox" name="available" value="no" checked> No<br> -->

        </div>

        <button type="submit" class="send-button">Save Changes</button>

    </form>
  </div>

</div>

