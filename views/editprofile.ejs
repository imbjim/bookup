<div class="login-container">

  <div class="form-wrapper">
    <form action="/edit" method="POST" enctype="multipart/form-data">
        <h3 class="new-account-header">Edit your profile</h3>
        <div class="form-group">

          <input type="text" class="basic-form" id ="username" name="username" value="<%= user.username %>" placeholder="username">
          <input type="text" class="basic-form" id="name" name="name" value="<%= user.name %>" placeholder="name">
          <input type="text" class="basic-form" id="mobile" name="phone" value="<%= user.phone %>" placeholder="mobile">
          <input type="text" class="basic-form" id="city" name="city" value="<%= user.city %>" placeholder="city">
          <input type="text" class="basic-form" id="country" name="country" value="<%= user.country %>" placeholder="country">
          <input type="number" class="basic-form" id="age" name="age" value="<%= user.age %>" placeholder="age">
          <input type="text" class="basic-form" id="gender" name="gender" value="<%= user.gender %>"  placeholder="gender">
          <div class="upload-file">
            <label for="image">Profile picture</label></br>
            <input type="file" class="upload" id="profile_image" name="profile_image" value="">
          </div>


        </div>
        <button type="submit" class="send-button">Save</button>
        <a class="cancel-button" href="/">Cancel</a>

    </form>
  </div>

</div>
