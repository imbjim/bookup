<nav class="navbar">
  <div class="navbar-wrapper">
    <h3 class="brand">bookup</h3>
    <a href="/logout" class="navbar-button nabvar-button-right">Logout</a>
    <!-- <a href="/" class="navbar-button navbar-button-left">Home</a> -->
  </div>
</nav>
<div class="container">


  <div class="profile-wrapper">

    <div class="profile-picture-wrapper">
      <img src="<%= user.picture%>" alt="profile-picture" class="profile-picture">
    </div>
    <div class="profile-data-wrapper">
      <ul>
        <li><%= user.name %></li>
        <li><%= user.username %></li>
        <li><%= user.email %></li>
        <li><%= user.city %></li>
        <li><%= user.phone %></li>
        <li><%= user.country %></li>
      </ul>
      <a class="edit-profile-button" href="/edit-profile">Edit Profile</a>
    </div>

  </div>

  <nav class="books-navbar">
    <a>My Books</a>
    <a href="/available-books">Available Books</a>
    <a href="/all-books">All Books</a>
    <a href="/messages">Messages</a>
  </nav>



  <div class="mybooks-wrapper">

    <div class="mybooks new">

        <a href="/add-book">
          <img src="images/add-book.jpg" alt="addBook">
        </a>

    </div>


<% books.forEach((book) => { %>
 <% if (user._id.equals(book.current_user)) { %>
    <div class="mybooks">

      <a class="book-link" href="/<%=book._id%>/showbook">
        <div class="cover-wrapper">

          <img src="<%= book.picture%>" alt="book cover picture" class="cover">

        </div>
      </a>

      <div class="book-list-info">
        <ul>
          <li><%= book.title %></li>
          <li><%= book.author %></li>
          <!-- <li>Genre</li>
          <li>Pages</li> -->
        </ul>
        <div class="book-options">


          <a href="/<%= book._id %>/edit">Edit</a>
          <!-- <a href="/<%=book._id%>/showbook">Show</a> -->
          <a href="/<%=book._id%>/deletebook">Delete</a>

        </div>
      </div>
    </div>
    <% }; %>

<% }); %>

  </div>


</div>
